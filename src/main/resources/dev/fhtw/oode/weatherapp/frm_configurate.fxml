        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="lbl_configTitle" alignment="CENTER" contentDisplay="CENTER" text="Weather App Configuration" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.valignment="BOTTOM">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <TextField fx:id="tf_longitude" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="155.0" promptText="Longitude" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
            <TextField fx:id="tf_latitude" layoutX="33.0" layoutY="126.0" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="155.0" promptText="Latitude" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="TOP" />
            <Label fx:id="lbl_location" text="location" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="BOTTOM" />
            <TextField fx:id="tf_apiKey" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="202.0" GridPane.columnIndex="3" GridPane.columnSpan="2" GridPane.rowIndex="2" />
